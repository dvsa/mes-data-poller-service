{
  "name": "mes-data-replication-service",
  "version": "0.1.0",
  "author": "DVSA",
  "license": "MIT",
  "description": "All the code for moving data between TARS the caches in the MES estate",
  "homepage": "https://github.com/dvsa/mes-data-replication-service",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dvsa/mes-data-replication-service.git"
  },
  "bugs": {
    "url": "https://github.com/dvsa/mes-data-replication-service/issues"
  },
  "scripts": {
    "clean": "rimraf build artefacts",
    "compile": "tsc",
    "compile-no-emit": "tsc --noEmit -p .",
    "e2e": "run-s clean compile stack:up features stack:down",
    "features": "cucumber-js e2e/ --require 'build/e2e/**/*.js' --tags 'not @skip'",
    "lint": "eslint -c .eslintrc.js --ext .ts src",
    "lint:fix": "eslint --fix -c .eslintrc.js --ext .ts src",
    "package": "./package.sh",
    "prepush": "npm run security-scan && npm run lint && npm test",
    "security-scan": "git secrets --scan && git log -p | scanrepo",
    "stack:up": "ts-node start-stack.ts",
    "stack:down": "ts-node stop-stack.ts",
    "start": "sls dynamodb install && sls offline start",
    "test": "npm run compile && jasmine",
    "test:jasmine-coverage": "nyc npm run test",
    "test:int": "run-s clean compile stack:up test:int:suites stack:down",
    "test:int:suites": "jasmine 'build/**/*.int.js'",
    "prepare": "husky install"
  },
  "dependencies": {
    "@types/aws-lambda": "^8.10.76",
    "@types/aws-sdk": "^2.7.0",
    "@types/luxon": "^3.3.2",
    "aws-sdk": "^2.1455.0",
    "escape-json-node": "^2.0.0",
    "lodash": "^4.17.21",
    "luxon": "^3.4.3",
    "moment": "^2.29.4",
    "mysql2": "^1.6.5",
    "node.extend": "^2.0.2"
  },
  "devDependencies": {
    "@dvsa/mes-journal-schema": "1.3.1",
    "@dvsa/mes-microservice-common": "1.0.2",
    "@dvsa/mes-test-schema": "3.42.5",
    "@types/aws-lambda": "^8.10.120",
    "@types/chai": "^4.3.6",
    "@types/jasmine": "^4.3.5",
    "@types/lodash": "^4.14.198",
    "@types/mysql": "^2.15.21",
    "@types/node": "^20.6.0",
    "@types/node-fetch": "^2.6.4",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^6.7.0",
    "aws-lambda-test-utils": "^1.3.0",
    "aws-sdk-mock": "^5.8.0",
    "chai": "^4.3.8",
    "cucumber": "^6.0.7",
    "docker-compose": "^0.24.2",
    "eslint": "^8.49.0",
    "eslint-plugin-import": "^2.28.1",
    "lint-staged": "^14.0.1",
    "husky": "^8.0.3",
    "jasmine": "^5.1.0",
    "jasmine-spec-reporter": "^7.0.0",
    "mysql-import": "^5.0.26",
    "node-docker-monitor": "^1.0.11",
    "node-fetch": "^3.3.2",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "rimraf": "^5.0.1",
    "serverless": "^3.34.0",
    "serverless-dotenv-plugin": "^6.0.0",
    "serverless-dynamodb-local": "^0.2.40",
    "serverless-offline": "^12.0.4",
    "serverless-webpack": "^5.13.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.1",
    "typemoq": "^2.1.0",
    "typescript": "^5.2.2",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "yamljs": "^0.3.0"
  },
  "nyc": {
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "exclude": [
      "**/__mocks__/*",
      "**/__tests__/*"
    ],
    "exclude-after-remap": false,
    "sourceMap": true,
    "produce-source-map": true,
    "instrument": true
  },
  "lint-staged": {
    "./src/**/*.ts": [
      "npm run lint:fix"
    ]
  }
}

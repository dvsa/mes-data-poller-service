{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "lib": [ "esnext" ],
    "types": [ "jest", "node" ],
    "sourceMap": true,
    "target": "es5",
    "outDir": "./build",
    "allowJs": false
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts"
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
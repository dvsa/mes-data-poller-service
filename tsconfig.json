{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "lib": [ "esnext" ],
    "sourceMap": true,
    "target": "es5",
    "outDir": "./build",
    "allowJs": false,
    "resolveJsonModule": true,
    "types" : [
      "node",
      "jasmine"
    ],
    "experimentalDecorators": true
  },
  "include": [
    "./src/**/*",
    "./spec/**/*",
    "./e2e/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
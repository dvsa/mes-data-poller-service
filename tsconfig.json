{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "lib": [ "esnext" ],
    "types": [ "node", "jasmine" ],
    "sourceMap": true,
    "target": "es5",
    "outDir": "./build",
    "allowJs": false
  },
  "include": [
    "./src/**/*",
    "./spec/**/*",
    "./e2e/**/*"
  ],
  "exclude": [
    "node_modules",
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}